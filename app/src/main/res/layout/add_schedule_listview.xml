<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp"
    android:background="#999999">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">
        <TextView
            android:id="@+id/tv_add_schedule_place_todo"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="장소 , 할일"
            android:textSize="16sp"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_add_schedule_time"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/tv_add_schedule_place_todo"
            android:text="시간"
            android:textSize="16sp"
            android:textColor="#ff0000"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/iv_add_schedule_map"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/tv_add_schedule_time"
            android:src="@mipmap/ic_map"/>

        <TextView
            android:id="@+id/tv_add_schedule_cost"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_below="@id/tv_add_schedule_time"
            android:layout_toRightOf="@id/tv_add_schedule_place_todo"
            android:layout_marginTop="10dp"
            android:text="10,000원"
            android:textSize="16sp"
            android:textColor="#00ff00"/>
        <ImageView
            android:id="@+id/iv_add_schedule_cost_type"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/tv_add_schedule_cost"
            android:layout_below="@id/iv_add_schedule_map"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_meal"/>

        <com.nightonke.boommenu.BoomMenuButton
            android:id="@+id/bmb_add_schedule"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            app:bmb_inList="true"
            app:bmb_buttonEnum="textOutsideCircle"
            app:bmb_piecePlaceEnum="piecePlace_dot_2_1"
            app:bmb_buttonPlaceEnum="buttonPlace_sc_2_1">
        </com.nightonke.boommenu.BoomMenuButton>

        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_below="@id/bmb_add_schedule"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#888888"></LinearLayout>
    </RelativeLayout>


</RelativeLayout>