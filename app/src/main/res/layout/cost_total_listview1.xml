<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@color/Accent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cost_total_time"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="09:00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textColor="#000000"/>

        <ImageView
            android:id="@+id/iv_cost_total_cost_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_meal"
            android:layout_marginRight="8dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="16dp">

            <TextView
                android:id="@+id/tv_cost_total_place_todo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="부산 해운대"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/tv_cost_total_memo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="aaaaaaaaaaaaaaaa"
                android:visibility="visible"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_cost_total_cost"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="10000원"
            android:gravity="center_vertical"/>

    </LinearLayout>


</LinearLayout>